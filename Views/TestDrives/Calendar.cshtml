@using ShowroomManagement.Models
@{
    ViewData["Title"] = "Lịch đăng ký lái thử";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<TestDrive>
@section Styles {
    <link rel="stylesheet" href="~/css/calendar.css" />
}

<div class="calendar-container">
    <div class="calendar-header">
        <div class="d-flex mx-auto" style="max-width: 200px; gap: 1rem">
            <label class="d-block my-auto">Tháng</label>
            <select class="form-control" name="month" id="month" onchange="getMonth(this)">
