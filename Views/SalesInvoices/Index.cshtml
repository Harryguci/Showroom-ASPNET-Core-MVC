@model IEnumerable<ShowroomManagement.Models.SalesInvoice>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClientId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SaleDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantitySale)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClientId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SaleDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantitySale)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InSaleId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.InSaleId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.InSaleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
